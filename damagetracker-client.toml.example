# Configuration file for Damage Tracker Mod
# This file is automatically generated on first launch
# Location: .minecraft/config/damagetracker-client.toml

[Damage Tracker Configuration]
	# Time window in seconds for damage tracking (10-60)
	# Range: 10 ~ 60
	timeWindow = 30
	
	# X position of overlay (pixels from left edge of screen)
	# Range: 0 ~ 10000
	overlayX = 10
	
	# Y position of overlay (pixels from top edge of screen)
	# Range: 0 ~ 10000
	overlayY = 10
	
	# Width of overlay in pixels
	# Range: 100 ~ 1000
	overlayWidth = 300
	
	# Height of overlay in pixels
	# Range: 50 ~ 1000
	overlayHeight = 200
	
	# Show DPS (damage per second) for each source
	showDPS = true
	
	# Show damage percentage for each source
	showPercentage = true
	
	# Maximum number of damage sources to display
	# Range: 1 ~ 50
	maxSourcesDisplayed = 10
